<%# console.log(photo) %>
<%# console.log(data) %>
<tr <%= (el) -> el.data( 'photo', photo) %> <%= (el) -> el.data( 'data', data) %>>

	<% if (!this.insideArticle) { %>
		<td><input class="pick" type="radio" name="photo" /></td>

		<td><img class="pick" src="<%= photo.public_url %>" height="50" /></td>

		<td><%= photo.title %></td>
	<% } %>

	<% if (!data.title) { %>
		<td>
			<form class="snippet-params">
				<select class="span2" name="size">
					<option value="mala" <%= data.size == 'mala' ? "selected='selected'" : '' %>><%= $.t('Small')%></option>
					<option value="standard" <%= data.size == 'standard' ? "selected='selected'" : '' %>><%= $.t('Medium')%></option>
					<option value="velka" <%= data.size == 'velka' ? "selected='selected'" : '' %>><%= $.t('Large')%></option>
				</select>
				<select class="span2" name="format">
					<option value="ctverec" <%= data.format == 'ctverec' ? "selected='selected'" : '' %>>ctverec</option>
					<option value="nudle_sirka" <%= data.format == 'nudle_sirka' ? "selected='selected'" : '' %>>nudle_sirka</option>
					<option value="nudle_vyska" <%= data.format == 'nudle_vyska' ? "selected='selected'" : '' %>>nudle_vyska</option>
					<option value="obdelnik_sirka" <%= data.format == 'obdelnik_sirka' ? "selected='selected'" : '' %>>obdelnik_sirka</option>
					<option value="obdelnik_vyska" <%= data.format == 'obdelnik_vyska' ? "selected='selected'" : '' %>>obdelnik_vyska</option>
				</select>

				<table>
					<tr>
						<td><label for="resizable"><input type="checkbox" name="resizable" value="1"
							<%= data.show_resizable == 1 ? 'checked=checked' : ''  %> />&nbsp;<%= $.t('Resizable') %></label>
						</td>
						<td><label for="author"><input type="checkbox" name="authors" value="1"
							<%= data.show_authors == 1 ? 'checked=checked' : ''  %> />&nbsp;<%= $.t('Authors') %></label></td>
					</tr>
					<tr>
						<td><label for="description"><input type="checkbox" name="description" value="1" <%= data.show_description == 1 ? 'checked=checked' : ''  %>/>&nbsp;<%= $.t('Description') %></label></td>
						<td><label for="source"><input type="checkbox" name="source" value="1" <%= data.show_source == 1 ? 'checked=checked' : ''  %>/>&nbsp;<%= $.t('Source') %></label></td>
					</tr>
				</table>

				<label for="align">
					<%= $.t('Align')%>:&nbsp;
					<select class="span2" name="align">
						<option value="right" <%= data.align == 'right' ? "selected='selected'" : '' %>><%= $.t('Right')%></option>
						<option value="left" <%= data.align == 'left' ? "selected='selected'" : '' %>><%= $.t('Left')%></option>
						<option value="center" <%= data.align == 'center' ? "selected='selected'" : '' %>><%= $.t('Center')%></option>
					</select>
				</label>

				<label for="external_url">
					<%= $.t('External url')%>:&nbsp;
					<input class="span2" type="text" name="url" />
				</label>
			</form>
		</td>
	<% } %>


	<% if (this.insideArticle) { %>
		<td valign="top"><img class="pick" src="<%= photo.public_url %>" /></td>
	<% } %>
</tr>