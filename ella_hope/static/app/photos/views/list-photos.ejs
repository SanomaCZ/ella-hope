<table class="table table-striped">
	<thead>
		<tr>
			<th><%= $.t('Image') %></th>
			<th><%= $.t('Title') %></th>
			<th><%= $.t('Description') %></th>
			<th><%= $.t('Actions') %></th>
		</tr>
	</thead>
	<tbody>
		<% list(this.photos, function( photo ) { %>
			<%
			var editUrl = can.route.url({ page: 'photos', action: 'edit', id: photo.id });
			%>
			<tr>
				<td><a href="<%== editUrl %>"><img height="60" src="<%= photo.public_url %>" /></a></td>
				<td><a href="<%== editUrl %>"><%= photo.title %></a></td>
				<td><%= photo.description %></td>
				<td>
					<!-- Edit -->
					<a <%= (el) -> el.data( 'photo', photo ) %> href="<%= editUrl %>" class="btn btn-mini edit-photo">
						<%= $.t('Edit');%> <i class="icon-pencil"></i>
					</a>

					<!-- Delete -->
					<a <%= (el) -> el.data( 'photo', photo ) %> href="javascript://" class="btn btn-mini btn-danger delete" data-confirm="<%= $.t('Are you sure you want to delete the photo?') %>"><%= $.t('Delete');%> <i class="icon-trash icon-white"></i></a>
				</td>
			</tr>
		<% } ) %>
	</tbody>
</table>