<div class="page-header">
	<h1><%= this.model %></h1>
</div>

<form class="form-inline list-filter clearfix" id="filter">
	<div class="clearfix">
		<div class="pull-left">
			<a href="<%= can.route.url({ page: this.model, action: 'new' })%>" class="btn btn-success">
				<%= $.t('Create new item') %>
			</a>
		</div>
		<div class="pull-right">
			<div class="input-append form-group">
				<div class="input-group">
					<input type="text" name="titleslug" class="input-medium form-control" placeholder="<%= $.t('search by title/slug') %>" />
					<div class="input-group-btn">
						<button type="button" class="btn btn-default filter-items" data-loading-text="Searching..."><%= $.t('articles.search')%></button>						
					</div>
				</div>
			</div>

			<div class="form-group">
				<button type="button" class="btn btn-default dropdown-toggle toggle-advanced <%= ($.cookie(window.HOPECFG.COOKIE_FILTER) == 'true') ? 'dropup' : 'dropdown' %>">
					<span class="label-show"><%= $.t('Show advanced') %></span>
					<span class="label-hide"><%= $.t('Hide advanced') %></span>
					<span class="caret"></span>
				</button>
				<button type="button" class="btn btn-danger reset-filter">
					<%= $.t('articles.reset_filter'); %>
				</button>
			</div>
		</div>
	</div>

	<div class="filter-advanced controls-row clearfix" style="<%= ($.cookie(window.HOPECFG.COOKIE_FILTER) == 'true') ? 'display:block' : 'display:none' %>">
		<div class="pull-right">
			<div class="form-group">
				<input class="input-small form-control" name="publish_from" type="text" placeholder="<%= $.t('articles.publish_from') %>" />
			</div>
			<div class="form-group">
				<input class="input-small form-control" name="publish_until" type="text" placeholder="<%= $.t('published until') %>" />
			</div>
			
			<select class="input-medium category-filter btn-default dropdown-toggle" name="category" data-placeholder="<%= $.t('articles.category')%>" style="width: 100px;">
				<option></option>
			</select>

			<select class="input-small chzn-select" name="published" data-placeholder="<%= $.t('articles.published') %>" style="width: 100px;">
				<option></option>
				<option value="today"><%= $.t('articles.today') %></option>
				<option value="yesterday"><%= $.t('articles.yesterday') %></option>
				<option value="week"><%= $.t('articles.week') %></option>
				<option value="month"><%= $.t('articles.month') %></option>
			</select>

			<select class="input-small chzn-select" name="state" data-placeholder="<%= $.t('articles.state')%>" style="width: 70px;">
				<option></option>
				<% if (states) { %>
					<% $.each(states, function(i, state){ %>
						<option value="<%= state %>"><%= state %></option>
					<% }) %>
				<% } %>
			</select>

			<select class="input-medium author-filter" name="author" data-placeholder="<%= $.t('articles.author')%>" style="width: 130px;">
				<option></option>
			</select>

			<select class="input-medium tag-filter" name="tag" data-placeholder="<%= $.t('articles.tags_filter')%>">
				<option></option>
			</select>
		</div>
	</div>
</form>

<hr/>

<div id="inner-content"></div>

<div class="pagination pagination-centered pagination-articles">
	<ul class="pagination">
		<li><a href="#" class="prev"><%= $.t('common.prev'); %></a></li>
		<li class="current"><a></a></li>
		<li><a href="#" class="next"><%= $.t('common.next'); %></a></li>
	</ul>
</div>
